<script>
    $(".check").click(function () {
        var form = $("form")[0];
        if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
        }
        form.classList.add('was-validated');
    });

    //$(".check").delegate("label", 'click', function () {
