@{ Layout = "_Layout Company"; }
@model IEnumerable<PostViewModel>
<section class="mt-md-5">
    <div class="container">
        <div class="card-header bg-white border-0">
            <h3 class="fw-bolder text-primary">Search Candidate</h3>
        </div>
        <div class="row">
          
                <div class="col-3">
                    <div class="card-body shadow bg-light">
                        <form method="post" asp-action="RegisterResume" >
                        <h5 class="fw-bolder">Job Field</h5>
                        <select class="form-select"
                                asp-items="@ViewBag.listjob">
                            <option value="">All</option>
                        </select>
                        <h5 class="fw-bolder mt-2">Location</h5>
                        <select class="form-select" 
                                asp-items="@ViewBag.listprovince">
                            <option value="">All</option>
                        </select>
                        <h5 class="fw-bolder mt-2">Education Degree</h5>
                        <select class="form-select" 
                                asp-items="@ViewBag.listdegree">
                            <option value="">All</option>
                        </select>
                        <h5 class="fw-bolder mt-4">Keyword</h5>
                        <input type="text" class="form-control" placeholder="Searching Keyword" name="searchString"/>
                        <div class="text-center mt-3">
                            <button type="button" class="btn btn-outline-primary col-sm-6 shadow">Search</button>
                        </div>
                        </form>
                    </div>
                </div>
         

                <div class="col-9">
                    @{ int num = 0;}
                    @foreach (var item in Model)
                    {
                        num++;

                      
                        <div class="card-body shadow bg-white @(num == 1 ? "":"mt-4")">
                            <div class="row">
                                <div class="col-sm-2">
                                    <img src="~/Images/Employee/@item.Img" class="rounded" style="width:100px;height:100px;" />
                                    <p class="fw-bolder mt-4 small">Gender: @item.Genders</p>
                                    <p class="fw-bolder small">Age: @item.birthday year</p>
                                </div>
                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-2 col-sm row">
                                            <p class="fw-bolder small col-sm-10">@item.FirstName @item.LastName</p>
                                            <p class="fw-bolder small w-auto text-end"><small>@item.Updatetime.ToString("d-M-yyyy hh:mm")</small></p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-2 col-sm row">
                                            <p class="fw-bolder small w-auto">Preferred Work Location : </p>
                                            <p class="fw-bolder small w-auto">@item.Location</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-2 col-sm row">
                                            <p class="fw-bolder small col-sm-6">#Highest Education Degree</p>
                                            <p class="fw-bolder small col-sm-6">#Education Major Subject</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-2 col-sm">
                                            <p class="fw-bolder small">#School Name</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-2 col-sm row">
                                            <p class="fw-bolder small w-auto">Expected Salary : </p>
                                            <p class="fw-bolder small w-auto">@item.ExpectedSalary</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-2 col-sm">
                                            <p class="fw-bolder small">@item.Jobfield@item.Jobfield2</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }



                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mt-5">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>
                            <li class="page-item"><a class="page-link" href="#">6</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
    </div>
</section>