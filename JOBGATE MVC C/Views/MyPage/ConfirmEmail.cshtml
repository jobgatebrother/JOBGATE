                                <label class="mt-1">Email Address</label>
                            </div>
                            <div class="col-sm-8 mt-2">
                                <input type="text" asp-for="Email" class="form-control" placeholder="Confirm Email Address"  readonly />
                               
                            </div>
                           
                        </div>
                        <hr />
                        <div class="row col-sm-12">
